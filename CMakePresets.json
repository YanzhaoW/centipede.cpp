{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default build",
      "description": "Default build",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "util/conan/conan_provider.cmake",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_EXTENSIONS": "ON",
        "ENABLE_TEST": "ON",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF"
      }
    },
    {
      "name": "debug-gcc",
      "inherits": "default",
      "displayName": "debug gcc build",
      "description": "debug build using gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_C_COMPILER": "gcc"
      }
    },
    {
      "name": "debug-clang",
      "inherits": "default",
      "displayName": "debug clang build",
      "description": "debug build using clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_FLAGS": "-stdlib=libstdc++"
      }
    },
    {
      "name": "debug-libc++",
      "inherits": "debug-clang",
      "displayName": "debug libc++ build",
      "description": "debug build using clang and libc++",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_EXE_LINKER_FLAGS": "-lc++abi"
      }
    },
    {
      "name": "doxygen",
      "displayName": "Doxygen build",
      "description": "Doxygen build",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_EXTENSIONS": "ON",
        "ENABLE_TEST": "ON",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF",
        "BUILD_DOC_ONLY": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "default"
        }
      ]
    }
  ]
}
